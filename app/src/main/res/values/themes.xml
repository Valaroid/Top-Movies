<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TopMovies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/crayola</item>
        <item name="colorPrimaryVariant">@color/chineseBlack</item>
        <item name="colorOnPrimary">@color/white</item>


        <item name="colorSecondary">@color/crayola</item>
        <item name="colorSecondaryVariant">@color/crayola</item>
        <item name="colorOnSecondary">@color/black</item>


        <item name="android:statusBarColor">@color/chineseBlack</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/chineseBlack</item>

    </style>

    <style name="Theme.TopMovies" parent="Base.Theme.TopMovies" />



    <style name="MyTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/philippineSilver</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>


    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/gunmetal</item>
        <item name="boxStrokeColor">@color/crayola</item>
        <item name="hintTextColor">@color/crayola</item>
        <item name="startIconTint">@color/philippineSilver</item>

    </style>



    <style name="roundedImageView" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10mdp</item>
    </style>
</resources>