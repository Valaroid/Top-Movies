<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Img movie-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_home"
        android:layout_width="@dimen/_100mdp"
        android:layout_height="@dimen/_130mdp"
        android:layout_marginTop="@dimen/_6mdp"
        app:cardBackgroundColor="@color/chineseBlack"
        app:cardCornerRadius="@dimen/_14mdp"
        app:cardElevation="@dimen/_3mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgItemLastMovie_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>


    <!--txt Title-->
    <TextView
        android:id="@+id/txtTitleLastMovie_home"
        style="@style/MyTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2mdp"
        android:layout_marginTop="@dimen/_2mdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/_12font_mdp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/card_home"
        app:layout_constraintTop_toTopOf="@id/card_home" />


    <!--txt Rate-->
    <TextView
        android:id="@+id/txtRateLastMovie_home"
        style="@style/MyTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2mdp"
        android:layout_marginTop="@dimen/_6mdp"
        android:drawablePadding="@dimen/_4mdp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_round_star_24"
        app:drawableTint="@color/philippineSilver"
        app:layout_constraintStart_toEndOf="@id/card_home"
        app:layout_constraintTop_toBottomOf="@id/txtTitleLastMovie_home" />

    <!--txt Country-->
    <TextView
        android:id="@+id/txtCountryLastMovie_home"
        style="@style/MyTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2mdp"
        android:layout_marginTop="@dimen/_6mdp"
        android:drawablePadding="@dimen/_4mdp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_round_language_24"
        app:drawableTint="@color/philippineSilver"
        app:layout_constraintStart_toEndOf="@id/card_home"
        app:layout_constraintTop_toBottomOf="@id/txtRateLastMovie_home" />

    <!--txt Calender-->
    <TextView
        android:id="@+id/txtYearLastMovie_home"
        style="@style/MyTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2mdp"
        android:layout_marginTop="@dimen/_6mdp"
        android:drawablePadding="@dimen/_4mdp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_round_calendar_today_24"
        app:drawableTint="@color/philippineSilver"
        app:layout_constraintStart_toEndOf="@id/card_home"
        app:layout_constraintTop_toBottomOf="@id/txtCountryLastMovie_home" />

    <!--txt more info-->
    <TextView
        android:id="@+id/txtGetMoreInfo_home"
        style="@style/MyTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2mdp"
        android:layout_marginTop="@dimen/_6mdp"
        android:drawablePadding="@dimen/_4mdp"
        android:text="@string/moreInfo"
        android:textColor="@color/scarlet"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/ic_round_chevron_right_24"
        app:drawableTint="@color/scarlet"
        app:layout_constraintStart_toEndOf="@id/card_home"
        app:layout_constraintTop_toBottomOf="@id/txtYearLastMovie_home" />


</androidx.constraintlayout.widget.ConstraintLayout>