<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgPosterItem_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300mdp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150mdp"
        android:background="@drawable/bg_shadow_poster_home"
        app:layout_constraintBottom_toBottomOf="@id/imgPosterItem_home" />

    <!--txt info-->
    <TextView
        android:id="@+id/txtInfoPoster_home"
        style="@style/MyTextViewStyle"
        android:textSize="@dimen/_12font_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_round_star_24"
        android:drawableTint="@color/crayola"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imgPosterItem_home" />

    <!--txt Title-->
    <TextView
        android:layout_marginBottom="@dimen/_4mdp"
        android:textSize="@dimen/_16font_mdp"
        android:id="@+id/txtTitlePoster_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/txtInfoPoster_home"
        app:layout_constraintEnd_toEndOf="@id/txtInfoPoster_home"
        app:layout_constraintStart_toStartOf="@id/txtInfoPoster_home" />

    <!--shadow-->



</androidx.constraintlayout.widget.ConstraintLayout>